<!DOCTYPE html>
<html lang="{{language}}">
<head>
  <meta charset="UTF-8">
  <title>{{#t}}User Panel{{/t}}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div id="page-wrapper">
    {{> navbar}}

    <main class="container mt-5">
      {{#successMessage}}
        <div class="alert alert-success text-center">{{successMessage}}</div>
      {{/successMessage}}

      {{#errorMessage}}
        <div class="alert alert-danger text-center">{{errorMessage}}</div>
      {{/errorMessage}}

      <h1 class="mb-4 text-center">{{#t}}User Panel{{/t}}</h1>
      <p class="text-center">{{#t}}Logged in as:{{/t}} <strong>{{username}}</strong></p>
      <hr>

      <h4 class="mb-3 text-navbar text-center">{{#t}}Edit your data{{/t}}</h4>
      <form method="POST" action="/dashboard/edit" class="form-wrapper">
        <div class="mb-3">
          <label class="form-label">{{#t}}First name{{/t}}</label>
          <input type="text" class="form-control" name="firstName"
                 value="{{formData.firstName}}{{^formData.firstName}}{{user.firstName}}{{/formData.firstName}}" required
                 pattern="[A-Za-zżźćńółęąśŻŹĆĄŚĘŁÓŃ\s]+" title="{{#t}}Only letters are allowed{{/t}}">
        </div>

        <div class="mb-3">
          <label class="form-label">{{#t}}Last name{{/t}}</label>
          <input type="text" class="form-control" name="lastName"
                 value="{{formData.lastName}}{{^formData.lastName}}{{user.lastName}}{{/formData.lastName}}" required
                 pattern="[A-Za-zżźćńółęąśŻŹĆĄŚĘŁÓŃ\s]+" title="{{#t}}Only letters are allowed{{/t}}">
        </div>

        <div class="mb-3">
          <label class="form-label">{{#t}}Username{{/t}}</label>
          <input type="text" class="form-control" name="username"
                 value="{{formData.username}}{{^formData.username}}{{user.username}}{{/formData.username}}" required
                 pattern="[a-zA-Z0-9]+" title="{{#t}}Only letters and numbers{{/t}}">
        </div>

        <div class="mb-3">
          <label class="form-label">{{#t}}Email address{{/t}}</label>
          <input type="email" class="form-control" name="email"
                 value="{{formData.email}}{{^formData.email}}{{user.email}}{{/formData.email}}" required
                 title="{{#t}}Enter a valid email{{/t}}">
        </div>

        <div class="mb-3">
          <label class="form-label">{{#t}}Phone number{{/t}}</label>
          <input type="tel" class="form-control" name="phone"
                 value="{{formData.phone}}{{^formData.phone}}{{user.phone}}{{/formData.phone}}" required
                 pattern="[0-9]{6,15}" title="{{#t}}Digits only{{/t}}">
        </div>

        <div class="d-flex justify-content-center gap-3 mt-3">
          <button type="submit" class="btn btn-navbar">{{#t}}Save changes{{/t}}</button>
        </div>
      </form>

      <hr class="my-5">

      <h4 class="mb-3 text-navbar text-center">{{#t}}Change password{{/t}}</h4>
      <form method="POST" action="/dashboard/reset-password" class="form-wrapper">
        <div class="mb-3">
          <label class="form-label">{{#t}}New password{{/t}}</label>
          <input type="password" class="form-control" name="newPassword" required minlength="8" placeholder="{{#t}}Min. 8 characters{{/t}}">
        </div>
        <div class="mb-3">
          <label class="form-label">{{#t}}Confirm current password{{/t}}</label>
          <input type="password" class="form-control" name="confirmPassword" required placeholder="{{#t}}Your current password{{/t}}">
        </div>
        <div class="d-flex justify-content-center gap-3 mt-3">
          <button type="submit" class="btn btn-navbar-alt">{{#t}}Change password{{/t}}</button>
        </div>
      </form>

      <hr class="my-5">

      <h4 class="mb-3 text-navbar text-center">{{#t}}My courses and sessions{{/t}}</h4>

      {{#fullCourses.length}}
        <h5 class="mt-3">{{#t}}Enrolled courses{{/t}}</h5>
        <div class="table-section">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>{{#t}}Title{{/t}}</th>
                <th>{{#t}}Type{{/t}}</th>
                <th>{{#t}}Style{{/t}}</th>
                <th>{{#t}}Level{{/t}}</th>
                <th>{{#t}}Dates{{/t}}</th>
                <th>{{#t}}Action{{/t}}</th>
              </tr>
            </thead>
            <tbody>
              {{#fullCourses}}
                <tr>
                  <td>{{title}}</td>
                  <td>{{#t}}{{courseType}}{{/t}}</td>
                  <td>{{style}}</td>
                  <td>{{#t}}{{level}}{{/t}}</td>
                  <td class="text-start">
                    {{#sessions}}
                      <div class="badge bg-navbar-date d-block mb-1">{{.}}</div>
                    {{/sessions}}
                  </td>
                  <td>
                    <form method="POST" action="/dashboard/unenroll-full/{{_id}}">
                      <button type="submit" class="btn btn-danger btn-sm">{{#t}}Unenroll{{/t}}</button>
                    </form>
                  </td>
                </tr>
              {{/fullCourses}}
            </tbody>
          </table>
        </div>
      {{/fullCourses.length}}

      {{#partialCourses.length}}
        <h5 class="mt-4">{{#t}}Enrolled sessions (selected dates){{/t}}</h5>
        <div class="table-section">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>{{#t}}Title{{/t}}</th>
                <th>{{#t}}Type{{/t}}</th>
                <th>{{#t}}Style{{/t}}</th>
                <th>{{#t}}Level{{/t}}</th>
                <th>{{#t}}Date{{/t}}</th>
                <th>{{#t}}Action{{/t}}</th>
              </tr>
            </thead>
            <tbody>
              {{#partialCourses}}
                {{#selectedDates}}
                  <tr>
                    <td>{{title}}</td>
                    <td>{{#t}}{{courseType}}{{/t}}</td>
                    <td>{{style}}</td>
                    <td>{{#t}}{{level}}{{/t}}</td>

                    <td>{{.}}</td>
                    <td>
                      <form method="POST" action="/dashboard/unenroll-partial/{{_id}}">
                        <input type="hidden" name="date" value="{{.}}">
                        <button type="submit" class="btn btn-danger btn-sm">{{#t}}Unenroll{{/t}}</button>
                      </form>
                    </td>
                  </tr>
                {{/selectedDates}}
              {{/partialCourses}}
            </tbody>
          </table>
        </div>
      {{/partialCourses.length}}

      {{^fullCourses.length}}{{^partialCourses.length}}
        <p class="text-muted">{{#t}}You are not enrolled in any courses or sessions.{{/t}}</p>
      {{/partialCourses.length}}{{/fullCourses.length}}
    </main>

    {{> footer }}
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      setTimeout(() => {
        document.querySelectorAll('.alert').forEach(el => el.remove());
      }, 5000);
    });
  </script>
</body>
</html>
