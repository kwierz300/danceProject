<link rel="stylesheet" href="/style.css">

<nav class="navbar navbar-expand-lg custom-navbar shadow-sm py-3">
  <div class="container-fluid">

    <!-- Logo / Nazwa -->
    <span class="navbar-brand">BestDanceSchool</span>

    <!-- Toggle dla widoku mobilnego -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
      aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Cała zawartość menu -->
    <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
      <ul class="navbar-nav gap-4 fs-5 text-center flex-wrap">

        <!-- Linki główne -->
        <li class="nav-item">
          <a class="nav-link {{#isActiveHome}}active{{/isActiveHome}}" href="/">{{#t}}Home{{/t}}</a>
        </li>

        <li class="nav-item">
          <a class="nav-link {{#isActiveWeekly}}active{{/isActiveWeekly}}" href="/courses/weekly">{{#t}}Weekly Sessions{{/t}}</a>
        </li>

        <li class="nav-item">
          <a class="nav-link {{#isActiveOther}}active{{/isActiveOther}}" href="/courses/other">{{#t}}Weekend Workshops{{/t}}</a>
        </li>

        <li class="nav-item">
          <a class="nav-link {{#isActiveContact}}active{{/isActiveContact}}" href="/contact">{{#t}}Contact{{/t}}</a>
        </li>

        <!-- Linki zależne od roli -->
        {{#sessionUser}}
          {{#isAdmin}}
            <li class="nav-item">
              <a class="nav-link {{#isActiveAdmin}}active{{/isActiveAdmin}}" href="/admin">{{#t}}Admin Panel{{/t}}</a>
            </li>
          {{/isAdmin}}

          {{#isOrganiser}}
            <li class="nav-item">
              <a class="nav-link {{#isActiveOrganiser}}active{{/isActiveOrganiser}}" href="/organiser">{{#t}}Organiser Panel{{/t}}</a>
            </li>
          {{/isOrganiser}}

          {{#isUser}}
            <li class="nav-item">
              <a class="nav-link {{#isActiveUser}}active{{/isActiveUser}}" href="/dashboard">{{#t}}User Panel{{/t}}</a>
            </li>
          {{/isUser}}

          <li class="nav-item">
            <a class="nav-link text-danger" href="/logout">{{#t}}Logout{{/t}} ({{username}})</a>
          </li>
        {{/sessionUser}}

        {{^sessionUser}}
          <li class="nav-item">
            <a class="nav-link {{#isActiveLogin}}active{{/isActiveLogin}}" href="/login">{{#t}}Login{{/t}}</a>
          </li>
        {{/sessionUser}}

        <!-- Przełączniki języka -->
        <li class="nav-item d-flex gap-2 align-items-center">
          <form action="/change-language" method="POST">
            <input type="hidden" name="lang" value="en">
            <button type="submit" class="btn btn-sm btn-outline-light {{#languageIsEnglish}}fw-bold text-warning border-warning{{/languageIsEnglish}}">English</button>
          </form>

          <form action="/change-language" method="POST">
            <input type="hidden" name="lang" value="pl">
            <button type="submit" class="btn btn-sm btn-outline-light {{#languageIsPolish}}fw-bold text-warning border-warning{{/languageIsPolish}}">Polski</button>
          </form>
        </li>

      </ul>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
