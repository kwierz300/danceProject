<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div id="page-wrapper">
    {{> navbar }}

    <main>
      <div class="container">
        <h1 class="text-center text-navbar mb-4">{{courseTitle}} â€“ {{#t}}Participants for date{{/t}}</h1>
        <h5 class="text-center text-muted mb-5">{{#t}}Date:{{/t}} {{selectedDate}}</h5>

        {{#participants.length}}
          <div class="table-section">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>{{#t}}Full name{{/t}}</th>
                  <th>{{#t}}Phone{{/t}}</th>
                  <th>{{#t}}Type{{/t}}</th>
                  <th>{{#t}}Actions{{/t}}</th>
                </tr>
              </thead>
              <tbody>
                {{#participants}}
                  <tr>
                    <td>
                      {{#isGuest}}{{name}}{{/isGuest}}
                      {{^isGuest}}{{firstName}} {{lastName}}{{/isGuest}}
                    </td>
                    <td>{{phone}}</td>
                    <td>{{#isGuest}}{{#t}}Guest{{/t}}{{/isGuest}}{{^isGuest}}{{#t}}Logged in{{/t}}{{/isGuest}}</td>
                    <td>
                      <form method="POST" action="/organiser/course/{{courseId}}/remove-participant-for-date" class="d-inline">
                        <input type="hidden" name="selectedDate" value="{{selectedDate}}">
                        {{#isGuest}}
                          <input type="hidden" name="name" value="{{name}}">
                          <input type="hidden" name="email" value="{{email}}">
                        {{/isGuest}}
                        {{^isGuest}}
                          <input type="hidden" name="username" value="{{username}}">
                        {{/isGuest}}
                        <button type="submit" class="btn btn-danger btn-sm">{{#t}}Remove{{/t}}</button>
                      </form>
                    </td>
                  </tr>
                {{/participants}}
              </tbody>
            </table>
          </div>
        {{/participants.length}}

        {{^participants.length}}
          <p class="text-muted text-center">{{#t}}No participants for this date.{{/t}}</p>
        {{/participants.length}}

        <div class="text-center mt-4">
          <a href="/organiser/course/{{courseId}}/participants-by-date" class="btn btn-navbar-muted">{{#t}}Select another date{{/t}}</a>
        </div>
      </div>
    </main>

    {{> footer }}
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
