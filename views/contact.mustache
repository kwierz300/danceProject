<!DOCTYPE html>
<html lang="{{language}}">
<head>
  <meta charset="UTF-8">
  <title>{{#t}}Contact{{/t}}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/style.css"> 
</head>

<body>
  {{> navbar}}

  <div class="container my-5">
    <h1 class="mb-4 text-center contact-form text-navbar">{{#t}}Contact us{{/t}}</h1>

    {{#successMessage}}
    <div class="alert alert-success text-center">
      {{successMessage}}
    </div>
    {{/successMessage}}

    <form method="POST" action="/contact" class="mx-auto contact-form" style="max-width: 600px;">
      <div class="mb-3">
        <label class="form-label">{{#t}}Name{{/t}}</label>
        <input type="text" name="name" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">{{#t}}Email address{{/t}}</label>
        <input type="email" name="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">{{#t}}Message{{/t}}</label>
        <textarea name="message" class="form-control" rows="5" required></textarea>
      </div>
      <div class="text-center mt-3">
        <button type="submit" class="btn btn-navbar">{{#t}}Send{{/t}}</button>
      </div>
    </form>
  </div>

  {{> footer}}
</body>
</html>
